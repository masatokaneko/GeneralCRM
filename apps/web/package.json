{
	"name": "@monorepo/web",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"copy-locales": "rm -rf public/locales && cp -r ../../packages/shared-i18n/locales public/locales",
		"setup-symlink": "rm -rf public/locales && ln -s ../../../packages/shared-i18n/locales public/locales",
		"dev": "npm run setup-symlink && next dev --turbopack",
		"build": "npm run copy-locales && next build --turbopack",
		"start": "next start",
		"lint": "biome check",
		"lint:fix": "biome lint --write ./",
		"format": "biome format --write ./",
		"check": "biome check --write ./",
		"type-check": "tsc --noEmit --skipLibCheck",
		"type-check:strict": "tsc --noEmit",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"storybook": "storybook dev -p 6006 --no-open",
		"build-storybook": "storybook build",
		"start-storybook": "npx http-server storybook-static -p 8080"
	},
	"dependencies": {
		"@monorepo/shared-i18n": "*",
		"@radix-ui/react-label": "2.1.8",
		"@radix-ui/react-slot": "1.2.4",
		"@tanstack/react-query": "^5.90.16",
		"axios": "^1.13.2",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"i18next": "25.7.1",
		"i18next-browser-languagedetector": "8.2.0",
		"i18next-http-backend": "3.0.2",
		"lucide-react": "0.555.0",
		"next": "15.5.7",
		"next-themes": "0.4.6",
		"react": "19.2.1",
		"react-dom": "19.2.1",
		"react-i18next": "16.3.5",
		"recharts": "^3.6.0",
		"tailwind-merge": "3.4.0",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@chromatic-com/storybook": "4.1.3",
		"@playwright/test": "1.57.0",
		"@storybook/addon-docs": "10.1.4",
		"@storybook/addon-mcp": "0.1.3",
		"@storybook/addon-onboarding": "10.1.4",
		"@storybook/addon-vitest": "10.1.4",
		"@storybook/nextjs-vite": "10.1.4",
		"@tailwindcss/postcss": "4.1.17",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitest/browser": "4.0.15",
		"@vitest/coverage-v8": "4.0.15",
		"http-server": "14.1.1",
		"msw": "2.12.4",
		"msw-storybook-addon": "2.0.6",
		"playwright": "1.57.0",
		"storybook": "10.1.4",
		"tailwindcss": "4.1.17",
		"tw-animate-css": "1.4.0",
		"typescript": "5.9.3",
		"vitest": "4.0.15"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	}
}
